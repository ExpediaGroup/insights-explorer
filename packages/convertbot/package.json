{
  "name": "@iex/convertbot",
  "version": "0.0.0",
  "description": "Insights Explorer Conversion Service",
  "main": "src/index.js",
  "private": true,
  "scripts": {
    "clean": "rm -rf ./dist && rm -f tsconfig.tsbuildinfo",
    "clean:deep": "rm -rf node_modules",
    "build": "npm run build:tsc",
    "build:tsc": "tsc --build --incremental --verbose",
    "build:tsc:watch": "tsc --build --watch",
    "--------": "----------------------------------",
    "start": "npm run start:dev",
    "start:dev": "npm run build:tsc && run-p build:tsc:watch start:nodemon",
    "start:nodemon": "nodemon -w ./dist/src --delay 1 ./dist/src",
    "start:prod": "node ./dist/src",
    "-------": "-----------------------------------",
    "test": "jest --coverage --verbose --detectOpenHandles --passWithNoTests",
    "test:watch": "npm run test -- --watch",
    "------": "------------------------------------",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix"
  },
  "dependencies": {
    "compression": "1.7.4",
    "dotenv-flow": "3.2.0",
    "express": "4.18.1",
    "express-async-errors": "3.1.1",
    "helmet": "5.1.0",
    "http-status-codes": "2.2.0",
    "module-alias": "2.2.2",
    "reflect-metadata": "0.1.13",
    "tmp-promise": "3.0.3"
  },
  "devDependencies": {
    "@types/compression": "1.7.2",
    "@types/dotenv-flow": "3.2.0",
    "@types/express": "4.17.13",
    "@types/jest": "27.4.1",
    "@types/module-alias": "2.0.1",
    "@types/node": "18.15.11",
    "@types/tmp": "0.2.3",
    "@typescript-eslint/eslint-plugin": "5.30.6",
    "@typescript-eslint/parser": "5.58.0",
    "eslint": "8.38.0",
    "eslint-config-prettier": "8.5.0",
    "eslint-import-resolver-typescript": "3.6.1",
    "eslint-plugin-import": "2.29.1",
    "eslint-plugin-prettier": "5.1.2",
    "jest": "27.5.1",
    "nodemon": "3.0.2",
    "npm-run-all": "4.1.5",
    "prettier": "3.1.1",
    "ts-jest": "27.1.4",
    "typescript": "4.6.4"
  }
}
