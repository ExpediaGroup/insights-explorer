{
  "name": "@iex/slackbot",
  "version": "0.0.0",
  "description": "Insights Explorer Slack Bot",
  "main": "src/index.js",
  "private": true,
  "scripts": {
    "clean": "rm -rf ./dist && rm -f tsconfig.tsbuildinfo",
    "clean:deep": "rm -rf node_modules && rm -f package-lock.json",
    "build": "npm run build:tsc",
    "build:tsc": "tsc --build --incremental --verbose",
    "build:tsc:watch": "tsc --build --watch",
    "--------": "----------------------------------",
    "start": "npm run start:dev",
    "start:dev": "npm run build:tsc && run-p build:tsc:watch start:nodemon",
    "start:nodemon": "nodemon -w ./dist/src --delay 1 ./dist/src",
    "start:prod": "node ./dist/src",
    "-------": "-----------------------------------",
    "test": "jest --coverage --verbose --detectOpenHandles --passWithNoTests",
    "test:watch": "npm run test -- --watch",
    "------": "------------------------------------",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix"
  },
  "dependencies": {
    "@elastic/elasticsearch": "7.13.0",
    "@slack/bolt": "3.8.1",
    "dotenv-flow": "3.2.0",
    "express": "4.17.2",
    "module-alias": "2.2.2",
    "morgan": "1.10.0",
    "node-fetch": "3.1.0",
    "reflect-metadata": "0.1.13",
    "tmp-promise": "3.0.3"
  },
  "devDependencies": {
    "@types/dotenv-flow": "3.2.0",
    "@types/express": "4.17.13",
    "@types/jest": "27.0.3",
    "@types/module-alias": "2.0.1",
    "@types/morgan": "1.9.3",
    "@types/node": "16.11.15",
    "@types/tmp": "0.2.2",
    "@typescript-eslint/eslint-plugin": "4.33.0",
    "@typescript-eslint/parser": "4.33.0",
    "eslint": "7.32.0",
    "eslint-config-prettier": "8.3.0",
    "eslint-import-resolver-typescript": "2.5.0",
    "eslint-plugin-import": "2.25.4",
    "eslint-plugin-prettier": "4.0.0",
    "jest": "27.4.5",
    "nodemon": "2.0.15",
    "npm-run-all": "4.1.5",
    "prettier": "2.5.1",
    "ts-jest": "27.1.1",
    "typescript": "4.5.4"
  }
}
