{
  "name": "@iex/slackbot",
  "version": "0.0.0",
  "description": "Insights Explorer Slack Bot",
  "main": "src/index.js",
  "private": true,
  "scripts": {
    "clean": "rm -rf ./dist && rm -f tsconfig.tsbuildinfo",
    "clean:deep": "rm -rf node_modules",
    "build": "npm run build:tsc",
    "build:tsc": "tsc --build --incremental --verbose",
    "build:tsc:watch": "tsc --build --watch",
    "--------": "----------------------------------",
    "start": "npm run start:dev",
    "start:dev": "npm run build:tsc && run-p build:tsc:watch start:nodemon",
    "start:nodemon": "nodemon -w ./dist/src --delay 1 ./dist/src",
    "start:prod": "node ./dist/src",
    "-------": "-----------------------------------",
    "test": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:watch": "vitest watch",
    "------": "------------------------------------",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix"
  },
  "dependencies": {
    "@elastic/elasticsearch": "7.13.0",
    "@slack/bolt": "3.17.1",
    "dotenv-flow": "3.2.0",
    "express": "4.18.1",
    "module-alias": "2.2.3",
    "reflect-metadata": "0.1.13",
    "tmp-promise": "3.0.3"
  },
  "devDependencies": {
    "@types/dotenv-flow": "3.2.0",
    "@types/express": "4.17.13",
    "@types/module-alias": "2.0.4",
    "@types/node": "20.11.27",
    "@types/tmp": "0.2.6",
    "nodemon": "3.0.3",
    "npm-run-all": "4.1.5",
    "typescript": "5.6.3"
  }
}
