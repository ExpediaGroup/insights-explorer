{
  "compilerOptions": {
    "allowJs": true,
    "baseUrl": ".",
    "composite": true,
    "declaration": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "incremental": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "paths": {
      "@iex/backend/*": [
        "./packages/backend/src/*"
      ],
      "@iex/frontend/*": [
        "./packages/frontend/src/*"
      ],
      "@iex/models/*": [
        "./packages/models/src/*"
      ],
      "@iex/mq/*": [
        "./packages/mq/src/*"
      ],
      "@iex/shared/*": [
        "./packages/shared/src/*"
      ]
    },
    "removeComments": true,
    "resolveJsonModule": true,
    "rootDir": ".",
    "sourceMap": true,
    "strict": true,
    "target": "ES2020",
    "types": [
      "node"
    ],
    "typeRoots": [
      "node_modules/@types",
      "src/types"
    ]
  },
  "include": [],
  "references": [
    {
      "path": "./packages/backend"
    },    {
      "path": "./packages/convertbot"
    }, {
      "path": "./packages/frontend"
    }, {
      "path": "./packages/models"
    }, {
      "path": "./packages/mq"
    }, {
      "path": "./packages/shared"
    }, {
      "path": "./packages/slackbot"
    }
  ]
}
